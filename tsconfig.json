{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./lib",
      "typeRoots": [
        "./typings",
        "./node_modules/@types"
    ]
  },
  "include": [
      "lib/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}